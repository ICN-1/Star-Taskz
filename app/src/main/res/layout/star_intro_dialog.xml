<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/transparent"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@drawable/dialog_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/regular_value_size"
        android:paddingVertical="@dimen/medium_value_size"
        android:orientation="vertical"
        android:gravity="center">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/ai_lottie"
            android:layout_width="125dp"
            android:layout_height="125dp"
            app:lottie_rawRes="@raw/star_intro_light"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:layout_marginBottom="@dimen/small_value_size"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/content_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="?attr/colorPrimary"
            android:text="Hey There!"
            android:textSize="@dimen/large_font_size"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginTop="@dimen/small_value_size"
            android:layout_marginBottom="@dimen/regular_value_size"/>
        <TextView
            android:id="@+id/content_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="?attr/colorSecondary"
            android:paddingHorizontal="@dimen/small_value_size"
            android:text="@string/ai_intro_dialog_text"
            android:textSize="12sp"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="@dimen/small_value_size"
            android:layout_marginBottom="@dimen/medium_value_size"/>
        <com.theteam.taskz.view_models.LoadableButton
            android:id="@+id/go_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/regular_value_size"
            android:layout_marginHorizontal="@dimen/small_value_size"
            android:layout_marginBottom="@dimen/regular_value_size"
            app:text="GO >"/>
        <com.theteam.taskz.view_models.UnderlineTextView
            android:id="@+id/skip_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SKIP"
            android:textSize="@dimen/small_font_size"
            android:textColor="?attr/colorSecondary"
            android:layout_marginBottom="@dimen/medium_value_size"
            android:fontFamily="@font/poppins_medium"/>

    </LinearLayout>

</LinearLayout>