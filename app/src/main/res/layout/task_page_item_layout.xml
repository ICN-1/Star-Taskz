<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe_refresh_layout"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:background="?attr/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/taskLayout"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/large_value_size"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:layout_marginHorizontal="@dimen/medium_value_size">
                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/task_progress"
                    app:trackColor="?attr/colorTertiary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:indicatorColor="@color/themeColor"
                    app:trackThickness="9dp"
                    app:trackCornerRadius="@dimen/medium_value_size"
                    android:progressTint="@color/themeColor"
                    android:progress="50"
                    android:progressBackgroundTint="@color/themeColor"
                    android:max="100"/>
            </LinearLayout>
            <TextView
                android:id="@+id/progress_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:text="50% Completed"
                android:textSize="10sp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="?attr/colorSecondary"
                android:layout_marginHorizontal="@dimen/medium_value_size"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/medium_value_size"
                    android:paddingTop="@dimen/large_value_size"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/all_layout"
                        android:layout_marginHorizontal="@dimen/regular_value_size"
                        android:paddingVertical="@dimen/regular_value_size"
                        android:paddingHorizontal="@dimen/medium_value_size"
                        android:layout_width="wrap_content"
                        android:backgroundTint="@color/themeColor"
                        android:background="@drawable/button_background"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/all_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="10sp"
                            android:text="All"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/pending_layout"
                        android:layout_marginHorizontal="@dimen/regular_value_size"
                        android:paddingVertical="@dimen/regular_value_size"
                        android:paddingHorizontal="@dimen/medium_value_size"
                        android:layout_width="wrap_content"
                        android:backgroundTint="?attr/colorTertiary"
                        android:background="@drawable/button_background"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/pending_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="10sp"
                            android:text="Pending"
                            android:textColor="?attr/colorSecondary"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/completed_layout"
                        android:layout_marginHorizontal="@dimen/regular_value_size"
                        android:paddingVertical="@dimen/regular_value_size"
                        android:paddingHorizontal="@dimen/medium_value_size"
                        android:layout_width="wrap_content"
                        android:backgroundTint="?attr/colorTertiary"
                        android:background="@drawable/button_background"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/completed_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="10sp"
                            android:text="Completed"
                            android:textColor="?attr/colorSecondary"/>
                    </LinearLayout>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/taskRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/regular_value_size"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:paddingTop="10dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/noTaskLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:layout_marginTop="20dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="false"
                app:lottie_rawRes="@raw/empty_tasks"
                android:scaleType="centerCrop"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/no_tasks_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/medium_value_size"
                android:text="No Taskz Today"
                android:textSize="@dimen/medium_font_size"
                android:textColor="?attr/colorPrimary"
                android:fontFamily="@font/poppins_medium"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
