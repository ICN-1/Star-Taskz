<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="?attr/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SyncGithub">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sync with Github"
            android:layout_marginHorizontal="@dimen/large_value_size"
            android:textSize="@dimen/large_font_size"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="@dimen/small_value_size"
            android:fontFamily="@font/poppins_semibold"
            tools:ignore="HardcodedText" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sync all your Issues, Pull Requests, and Events from your Github account. To do this, we need you to have created a 'Fine-grained personal access token'.\nIf you don't have one, create it."
            android:layout_marginHorizontal="@dimen/large_value_size"
            android:textSize="@dimen/regular_font_size"
            android:textColor="?attr/colorSecondary"
            android:fontFamily="@font/poppins_regular"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/issues"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Don't have Fine-grained token?"
            android:layout_marginHorizontal="@dimen/large_value_size"
            android:textSize="@dimen/regular_font_size"
            android:textColor="@color/themeColor"
            android:layout_marginBottom="@dimen/extra_large_value_size"
            android:fontFamily="@font/poppins_medium"
            tools:ignore="HardcodedText" />


        <com.theteam.taskz.view_models.TextInputFormField
            android:id="@+id/token_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/large_value_size"
            android:layout_marginTop="@dimen/large_value_size"
            android:layout_marginBottom="@dimen/extra_large_value_size"
            app:fontFamily="@font/poppins_regular"
            app:hint="Enter Token"
            app:isPassword="false"
            android:inputType="textEmailAddress"
            app:hintColor="?attr/colorSecondary"
            app:prefixIcon="@drawable/github_token"/>
        <com.theteam.taskz.view_models.LoadableButton
            android:id="@+id/loadable_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/large_value_size"
            android:layout_marginHorizontal="@dimen/large_value_size"
            app:text="Sync"
            app:backgroundColor="@color/themeColor"/>
        <LinearLayout
            android:layout_marginHorizontal="@dimen/extra_large_value_size"
            android:layout_width="match_parent"
            android:weightSum="2"
            android:gravity="center"
            android:layout_marginBottom="@dimen/large_value_size"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/medium_value_size"
                android:layout_weight="1"
                android:background="@drawable/divider_drawable"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorSecondary"
                android:text="or directly with"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/small_font_size"
                tools:ignore="HardcodedText" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/medium_value_size"
                android:layout_weight="1"
                android:background="@drawable/divider_drawable"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/github_sign_in_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/large_value_size">
            <include layout="@layout/github_signup_button"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" * Using this method would not provide 'Fine-grained access' token"
            android:layout_marginHorizontal="@dimen/large_value_size"
            android:paddingTop="@dimen/medium_value_size"
            android:paddingLeft="@dimen/medium_value_size"
            android:textSize="11sp"
            android:textColor="?attr/colorSecondary"
            android:fontFamily="@font/poppins_regular"
            tools:ignore="HardcodedText" />


    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>