<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingHorizontal="@dimen/medium_value_size"
    android:paddingBottom="@dimen/medium_value_size"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primary"
        android:layout_marginVertical="@dimen/large_value_size"
        android:text="Select Category"
        android:textSize="@dimen/large_font_size"
        android:fontFamily="@font/poppins_bold"/>

    <LinearLayout
        android:id="@+id/work"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/regular_value_size"
        android:paddingVertical="@dimen/regular_value_size"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/medium_icon_size"
            android:layout_height="@dimen/medium_icon_size"
            android:src="@drawable/work"
            android:scaleType="centerCrop"
            android:layout_marginEnd="@dimen/medium_value_size"
            app:tint="@color/red"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary"
            android:text="Work"
            android:textSize="@dimen/medium_font_size"
            android:fontFamily="@font/poppins_medium"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@drawable/divider_drawable"/>
    <LinearLayout
        android:id="@+id/personal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/regular_value_size"
        android:paddingVertical="@dimen/regular_value_size"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/medium_icon_size"
            android:layout_height="@dimen/medium_icon_size"
            android:src="@drawable/user"
            android:scaleType="centerCrop"
            android:layout_marginEnd="@dimen/medium_value_size"
            app:tint="@color/purple_700"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary"
            android:text="Personal"
            android:textSize="@dimen/medium_font_size"
            android:fontFamily="@font/poppins_medium"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@drawable/divider_drawable"/>
    <LinearLayout
        android:id="@+id/study"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/regular_value_size"
        android:paddingVertical="@dimen/regular_value_size"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/medium_icon_size"
            android:layout_height="@dimen/medium_icon_size"
            android:src="@drawable/study"
            android:scaleType="centerCrop"
            android:layout_marginEnd="@dimen/medium_value_size"
            app:tint="@color/themeColor"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary"
            android:text="Study"
            android:textSize="@dimen/medium_font_size"
            android:fontFamily="@font/poppins_medium"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@drawable/divider_drawable"/>
    <LinearLayout
        android:id="@+id/uncategorized"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/regular_value_size"
        android:paddingVertical="@dimen/regular_value_size"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/medium_icon_size"
            android:layout_height="@dimen/medium_icon_size"
            android:src="@drawable/hashtag_icon"
            android:scaleType="centerCrop"
            android:layout_marginEnd="@dimen/medium_value_size"
            app:tint="@color/yellow"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary"
            android:text="Uncategorized"
            android:textSize="@dimen/medium_font_size"
            android:fontFamily="@font/poppins_medium"/>
    </LinearLayout>

</LinearLayout>