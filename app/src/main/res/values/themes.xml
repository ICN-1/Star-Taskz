<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Taskz" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryLight</item>
        <item name="colorTertiary">@color/tertiaryLight</item>
        <item name="colorSecondary">@color/secondaryLight</item>
        <item name="background">@color/backgroundLight</item>
        <item name="colorOnBackground">@color/rootBackgroundLight</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="windowActionBar">false</item>

        <!-- Customize your theme here. -->
        <item name="bottomSheetStyle">@style/CustomBottomSheetDialog</item>
    </style>

    <style name="Theme.Taskz.Fullscreen" parent="Theme.AppCompat.NoActionBar">

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="BottomBarTheme" parent="Theme.AppCompat.Light">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">10sp</item>
        <item name="menuGravity">center</item>
    </style>
    <style name="CustomBottomSheetDialog" parent="Widget.Design.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearance</item>
    </style>

    <style name="CustomShapeAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="Theme.Taskz.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Taskz.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Taskz.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <item name="android:backgroundTint">?attr/background</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.Taskz.AppWidgetContainer" parent="Theme.Taskz.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
        <item name="android:backgroundTint">?attr/background</item>

    </style>
</resources>